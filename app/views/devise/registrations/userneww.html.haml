#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--main
      %h1 会員登録済みの方はこちらからログイン
      = render "devise/shared/links"
      %br
      %h2 ユーザー情報登録
    .account-page__inner--sabu
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :'ニックネーム(50文字以内)'
          .field-input
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname",placeholder:"ニックネーム入力＊必須",size:30
        .field__box
          .field__box-one
            .field
              .field-label
                = f.label :フリガナ（名字）
              .field-input
                = f.text_field :name_kana,autocomplete: "given-name",placeholder:"フリガナ＊必須",size:15
            .field
              .field-label
                = f.label :名前（名字）
              .field-input
                = f.text_field :name_kana,autocomplete: "given-name",placeholder:"名字入力＊必須",size:15
          .field__box-two
            .field
              .field-label
                = f.label :フリガナ（名前）全角
              .field-input
                = f.text_field :name,autocomplete: "family-name",placeholder:"フリガナ＊必須",size:15
            .field
              .field-label
                = f.label :名前（名前）全角
              .field-input
                = f.text_field :name,autocomplete: "family-name",placeholder:"名前入力＊必須",size:15
        .field
          .field-label
            = f.label :生年月日
          .field-input
            = f.text_field :birthday,autocomplete: "given-name",placeholder:"生年月日＊必須",size:15
        .field
          .field-label
            = f.label :電話番号
          .field-input
            = f.text_field :phone_number,autocomplete: "family-name",placeholder:"電話番号",size:15
        .field
          .field-label
            = f.label :メールアドレス
          .field-input
            = f.email_field :email,placeholder:"メールアドレス＠＊必須", autocomplete: "email",size:30
        .field
          .field-label
            = f.label :パスワード
            %i (英数字7文字以上)
          .field-input
            = f.password_field :password, autocomplete: "new-password",placeholder:"パスワード＊必須",size:30
        .field
          .field-label
            = f.label :パスワード再入力（確認）
          .field-input
            = f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"もう一度入力してください＊必須",size:30
        .actions
          = f.submit "NextPage", class: 'btn'
        .field
          = link_to "仮","devise/registations/touroku"

